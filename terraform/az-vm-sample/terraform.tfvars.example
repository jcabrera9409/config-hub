# =============================================================================
# SECURITY RULES (FIREWALL)
# =============================================================================

network_security_group_rules = [
  # SSH (port 22)
  {
    name                       = "SSH"
    priority                   = 1001
    direction                  = "Inbound"
    access                     = "Allow"
    protocol                   = "Tcp"
    source_port_range          = "*"
    destination_port_range     = "22"
    source_address_prefix      = "*"
    destination_address_prefix = "*"
  },
  # HTTP (port 80)
  {
    name                       = "HTTP"
    priority                   = 1002
    direction                  = "Inbound"
    access                     = "Allow"
    protocol                   = "Tcp"
    source_port_range          = "*"
    destination_port_range     = "80"
    source_address_prefix      = "*"
    destination_address_prefix = "*"
  },
  # HTTPS (port 443)
  {
    name                       = "HTTPS"
    priority                   = 1003
    direction                  = "Inbound"
    access                     = "Allow"
    protocol                   = "Tcp"
    source_port_range          = "*"
    destination_port_range     = "443"
    source_address_prefix      = "*"
    destination_address_prefix = "*"
  }
  # Add more rules if needed
  # {
  #   name                       = "Custom-App"
  #   priority                   = 1004
  #   direction                  = "Inbound"
  #   access                     = "Allow"
  #   protocol                   = "Tcp"
  #   source_port_range          = "*"
  #   destination_port_range     = "8080"
  #   source_address_prefix      = "*"
  #   destination_address_prefix = "*"
  # }
]

# =============================================================================
# TAGS
# =============================================================================

tags = {
  Environment = "Development"
  Project     = "Azure-VM-Sample"
  ManagedBy   = "Terraform"
  Owner       = "My-Team"
  CostCenter  = "IT-Department"
}